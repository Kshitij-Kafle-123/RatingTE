@model IEnumerable<Teacher>

    @{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">

    <h1 class="text-center mb-3"> Operations </h1>

    <div class="col mb-3">
        <a asp-controller="RateTeacher" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add Teacher</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Subject</th>
                <th scope="col">AverageRating</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.TeacherName
                    </td>
                    <td width="20%">
                        @item.Email
                    </td>
                    <td width="25%">
                        @item.Subject
                    </td>
                    <td width="20%"> 
                        @item.AverageRating
                    </td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            @*asp-route-id="@item.TeacherId"*@
                            <a asp-controller="RateTeacher" asp-action="Rate" asp-route-id="@item.TeacherId" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Rate Teacher</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>